<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcfcfc">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/image" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ru.nsu.fit.nsuschedule.view.TextViewCenturyGothicBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Title"
                        android:textColor="#111"
                        android:layout_weight="1"
                        android:id="@+id/item_title"
                        android:paddingRight="8dp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="true"
                        android:layout_marginTop="8dp"
                        android:layout_weight="0"
                        android:id="@+id/imageSmall" />
                </LinearLayout>

                <ru.nsu.fit.nsuschedule.view.TextViewCenturyGothicBold
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Desc Desc \n Desc "
                    android:paddingTop="4dp"
                    android:textColor="#555"
                    android:id="@+id/item_dest" />

                <ru.nsu.fit.nsuschedule.view.TextViewCenturyGothicBold
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#999"
                    android:text="12.23.16"
                    android:id="@+id/item_date"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>

        </RelativeLayout>

        <ru.nsu.fit.nsuschedule.view.TextViewCenturyGothicBold
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="right"
            android:textColor="#555"
            android:background="@drawable/news_type_bg"
            android:text="Тип Тип"
            android:lines="1"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textAllCaps="true"
            android:id="@+id/item_type"
            android:layout_alignParentRight="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/news_second_bg_color"
        android:layout_height="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c1c1c1"/>
    </LinearLayout>

</LinearLayout>