<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/bg_lesson" />

                <ru.nsu.fit.nsuschedule.view.TextViewRobotoRegular
                    android:id="@+id/text_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/text_name"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="Лекция"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <ru.nsu.fit.nsuschedule.view.TextViewRobotoRegular
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/image"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Lesson name"
                    android:textColor="#fff"
                    android:textSize="24sp" />

            </RelativeLayout>

            <ru.nsu.fit.nsuschedule.view.TextViewRobotoMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Преподаватель"
                android:textColor="#aaa"
                android:textSize="12sp" />

            <ru.nsu.fit.nsuschedule.view.TextViewRobotoRegular
                android:id="@+id/text_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="2dp"
                android:text="Teacher name"
                android:textColor="#000"
                android:textSize="14sp" />

            <ru.nsu.fit.nsuschedule.view.TextViewRobotoMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="Аудитория"
                android:textColor="#aaa"
                android:textSize="12sp" />

            <ru.nsu.fit.nsuschedule.view.TextViewRobotoRegular
                android:id="@+id/text_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="2dp"
                android:text="Teacher name"
                android:textColor="#000"
                android:textSize="14sp" />

            <ru.nsu.fit.nsuschedule.view.TextViewRobotoMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="Время"
                android:textColor="#aaa"
                android:textSize="12sp" />

            <ru.nsu.fit.nsuschedule.view.TextViewRobotoRegular
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="2dp"
                android:text="18:30"
                android:textColor="#000"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</layout>